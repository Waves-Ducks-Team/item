{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom", "esnext.asynciterable"],
    "paths": {
      "@pages/*": ["projects/desktop/src/app/pages/*"],
      "@ui/*": ["projects/ui/src/lib/*"],
      "@libs/*": ["projects/libs/src/lib/*"],
      "@content": ["projects/services/src/lib/content"],
      "@site": ["projects/services/src/lib/site"],
      "@page": ["projects/services/src/lib/page"],
      "@block": ["projects/services/src/lib/block"],
      "@groups": ["projects/services/src/lib/groups"],
      "@window": ["projects/services/src/lib/window"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
