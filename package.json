{
  "name": "item",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*",
    "contracts/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run --stream --concurrency 1 --sort build",
    "start": "lerna run --stream --parallel start",
    "dev": "cross-env DEBUG=observer,combine,writer,api,media-preserver lerna run --stream --parallel dev",
    "fix": "lerna run --stream --concurrency 1 fix",
    "test": "lerna run --stream --concurrency 1 --sort test",
    "test:e2e": "cypress run",
    "cypress:open": "cypress open",
    "prisma:generate": "cross-env PRISMA_HOST=prisma prisma generate",
    "prisma:deploy:dev": "cross-env PRISMA_HOST=localhost prisma deploy"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.2",
    "cross-env": "^5.2.0",
    "cypress": "^3.4.1",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.19.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  }
}
