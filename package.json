{
  "name": "item",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "contracts/*",
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna run --stream --concurrency 1 --sort clean",
    "build": "lerna run --stream --concurrency 1 --sort build",
    "build:packages": "lerna run --stream --concurrency 1 --sort build --no-private",
    "start": "lerna run --stream --concurrency 1 --sort start",
    "dev": "cross-env DEBUG=observer,combine,writer,api,media-preserver lerna run --parallel dev",
    "fix": "lerna run --stream --concurrency 1 fix",
    "test": "lerna run --stream --concurrency 1 --sort test",
    "test:e2e": "cypress run",
    "cypress:open": "cypress open",
    "prisma:generate": "cross-env PRISMA_ENDPOINT=http://prisma:4466 prisma generate",
    "prisma:deploy:dev": "cross-env PRISMA_ENDPOINT=http://localhost:4466 prisma deploy",
    "prisma:deploy": "prisma deploy -e .env"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.2",
    "cross-env": "^5.2.0",
    "cypress": "^3.4.1",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.19.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  }
}
